<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buffer_dialog_style" parent="@*android:style/Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="menu_popup_anim_style_vertical" parent="@*android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/vp_menu_popup_enter_vertical</item>
        <item name="android:windowExitAnimation">@anim/vp_menu_popup_exit_vertical</item>
    </style>
    <style name="vp_listview_textview_style_v5">
        <item name="android:textSize">15.0dip</item>
        <item name="android:textColor">@color/option_menu_listview_textview_text_color_v5</item>
    </style>
    <style name="vp_top_status_bar_media_name_textview_style_v5">
        <item name="android:textSize">@dimen/top_status_bar_media_name_textview_font_size_v5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/vp_white</item>
    </style>
    <style name="vp_top_status_bar_sub_title_textview_style_v5">
        <item name="android:textSize">13.5dip</item>
        <item name="android:textColor">@color/vp_white</item>
    </style>
    <style name="vp_loading_buffering_textview_style_v5">
        <item name="android:textSize">@dimen/loading_buffering_textview_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#d9ffffff</item>
    </style>
    <style name="vp_loading_buffering_to_be_play_textview_style_v5">
        <item name="android:textSize">@dimen/loading_buffering_to_be_play_textview_font_size</item>
        <item name="android:textColor">#99ffffff</item>
    </style>
    <style name="v5_no_round_activity_theme" parent="@*android:style/Theme.NoTitleBar.Fullscreen">
    </style>
</resources>
